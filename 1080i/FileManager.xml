<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="3">
    <defaultcontrol always="true">20</defaultcontrol>
    <onload>SetProperty(ShowFurniture_TopBar_Highlight,1,Home)</onload>
    <onunload>ClearProperty(ShowFurniture_TopBar_Highlight,Home)</onunload>
    <onload>SetProperty(LowerFurniture_BottomBar,1,Home)</onload>
    <controls>

        <include>GlobalBackground</include>
        <include>Furniture_TopBar</include>
        <include>Furniture_BottomBar</include>

        <control type="group">
            <include>Furniture_SettingsPanel</include>
            <control type="group">
                <description>Left panel</description>
                <left>SidePad</left>
                <top>SidePad</top>
                <height>640</height>
                <width>870</width>
                <control type="label" id="101">
                    <description>Header Label</description>
                    <top>5</top>
                    <left>30</left>
                    <right>30</right>
                    <height>66</height>
                    <align>left</align>
                    <font>TinyBold</font>
                    <textcolor>panel_fg_70</textcolor>
                </control>
                <control type="list" id="20">
                    <description>Left File List</description>
                    <left>15</left>
                    <bottom>15</bottom>
                    <right>15</right>
                    <height>552</height>
                    <onleft>SetFocus(300,0)</onleft>
                    <onright>21</onright>
                    <onup>300</onup>
                    <ondown>20</ondown>
                    <onfocus>SetProperty(ShowFurniture_TopBar,1,Home)</onfocus>
                    <itemlayout height="69" width="840">



                        <control type="label">
                            <left>30</left>
                            <width>720</width>
                            <align>left</align>
                            <textcolor>panel_fg_70</textcolor>
                            <info>ListItem.Label</info>
                        </control>

                        <control type="label">
                            <right>30</right>
                            <width>150</width>
                            <align>right</align>
                            <font>Tiny</font>
                            <textcolor>panel_fg_70</textcolor>
                            <info>ListItem.Label2</info>
                        </control>

                    </itemlayout>

                    <focusedlayout height="69" width="840">

                        <control type="image">
                            <width>100%</width>
                            <height>66</height>
                            <texture border="5" colordiffuse="$VAR[ColorHighlight]">common/box.png</texture>
                            <animation effect="fade" start="100" end="50" condition="!Control.HasFocus(20)">Conditional</animation>
                        </control>

                        <control type="label">
                            <left>30</left>
                            <width>720</width>
                            <align>left</align>
                            <textcolor>Selected</textcolor>
                            <info>ListItem.Label</info>
                        </control>

                        <control type="label">
                            <right>30</right>
                            <width>720</width>
                            <align>right</align>
                            <textcolor>Selected</textcolor>
                            <font>Tiny</font>
                            <info>ListItem.Label2</info>
                        </control>

                    </focusedlayout>
                </control>
                <control type="label" id="12">
                    <description>Header Label</description>
                    <left>23</left>
                    <top>882</top>
                    <height>66</height>
                    <width>480</width>
                    <align>left</align>
                    <label>-</label>
                </control>
            </control>

            <control type="group">
                <description>Right panel</description>
                <right>SidePad</right>
                <top>SidePad</top>
                <height>640</height>
                <width>870</width>

                <control type="label" id="102">
                    <description>Header Label</description>
                    <top>5</top>
                    <left>30</left>
                    <right>30</right>
                    <height>66</height>
                    <align>left</align>
                    <font>TinyBold</font>
                    <textcolor>panel_fg_70</textcolor>
                </control>

                <control type="list" id="21">
                    <description>Left File List</description>
                    <left>15</left>
                    <bottom>15</bottom>
                    <right>15</right>
                    <height>552</height>
                    <onleft>20</onleft>
                    <onright>SetFocus(300,5)</onright>
                    <onup>300</onup>
                    <ondown>21</ondown>
                    <onfocus>SetProperty(ShowFurniture_TopBar,1,Home)</onfocus>
                    <itemlayout height="69" width="840">
                        <control type="label">
                            <left>30</left>
                            <width>720</width>
                            <align>left</align>
                            <textcolor>panel_fg_70</textcolor>
                            <info>ListItem.Label</info>
                        </control>
                        <control type="label">
                            <right>30</right>
                            <width>150</width>
                            <align>right</align>
                            <font>Tiny</font>
                            <textcolor>panel_fg_70</textcolor>
                            <info>ListItem.Label2</info>
                        </control>
                    </itemlayout>
                    <focusedlayout height="69" width="840">
                        <control type="image">
                            <width>100%</width>
                            <height>66</height>
                            <texture border="5" colordiffuse="$VAR[ColorHighlight]">common/box.png</texture>
                            <animation effect="fade" start="100" end="50" condition="!Control.HasFocus(21)">Conditional</animation>
                        </control>
                        <control type="label">
                            <left>30</left>
                            <width>720</width>
                            <align>left</align>
                            <textcolor>Selected</textcolor>
                            <info>ListItem.Label</info>
                        </control>
                        <control type="label">
                            <right>30</right>
                            <width>720</width>
                            <align>right</align>
                            <textcolor>Selected</textcolor>
                            <font>Tiny</font>
                            <info>ListItem.Label2</info>
                        </control>
                    </focusedlayout>
                </control>
                <control type="label" id="22">
                    <description>Header Label</description>
                    <left>23</left>
                    <top>882</top>
                    <height>66</height>
                    <width>480</width>
                    <align>left</align>
                    <label>-</label>
                </control>
            </control>
        </control>

        <include>Furniture_Clock</include>
    </controls>

</window>

<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="OSD_Music">
        <control type="group">
            <visible>Player.Seeking | Player.DisplayAfterSeek | Player.Paused | Player.Forwarding | Player.Rewinding | Player.ShowInfo | Window.IsActive(musicosd) | Window.IsActive(videoosd) | Window.IsVisible(script-cu-lrclyrics-main.xml) | Window.IsVisible(DialogFullScreenInfo.xml)</visible>
            <include>Animation_FadeIn</include>
            <include>Animation_FadeOut</include>
            <!-- Overlay -->
            <control type="image">
                <texture colordiffuse="bf000000">common/white.png</texture>
            </control>

            <control type="group">
                <control type="group">
                    <width>720</width>
                    <height>720</height>
                    <left>SidePad</left>
                    <bottom>SidePad</bottom>
                    <control type="image">
                        <centerbottom>0</centerbottom>
                        <width>100%</width>
                        <height>48</height>
                        <aspectratio>stretch</aspectratio>
                        <texture border="24,12,24,12">diffuse/shadowspot.png</texture>
                    </control>
                    <control type="image">
                        <include>Defs_Shadow</include>
                        <texture>$INFO[Player.Art(thumb)]</texture>
                    </control>
                </control>
                <control type="group" description="info">
                    <left>800</left>
                    <right>SidePad</right>
                    <top>310</top>
                    <bottom>SidePad</bottom>
                    <control type="grouplist">
                        <top>400</top>
                        <left>40</left>
                        <bottom>10</bottom>
                        <right>0</right>
                        <animation effect="slide" start="0" end="0,-400" time="200" condition="Window.IsVisible(script-cu-lrclyrics-main.xml)">Conditional</animation>
                        <control type="label">
                            <aligny>top</aligny>
                            <height>110</height>
                            <width>100%</width>
                            <textcolor>main_fg_100</textcolor>
                            <font>font_musicvis_title</font>
                            <label>$INFO[Player.Title]</label>
                        </control>
                        <control type="grouplist">
                            <itemgap>0</itemgap>
                            <orientation>horizontal</orientation>
                            <height>70</height>
                            <width>100%</width>
                            <control type="label">
                                <aligny>top</aligny>
                                <width>80</width>
                                <label>31281</label>
                                <textcolor>main_fg_70</textcolor>
                                <font>font_musicvis_album</font>
                                <animation effect="fade" start="100" end="50" condition="true">Conditional</animation>
                            </control>
                            <control type="label">
                                <aligny>top</aligny>
                                <width>auto</width>
                                <textcolor>main_fg_70</textcolor>
                                <font>font_musicvis_album</font>
                                <label>$INFO[MusicPlayer.Artist]</label>
                            </control>
                        </control>
                        <control type="grouplist">
                            <itemgap>0</itemgap>
                            <orientation>horizontal</orientation>
                            <height>70</height>
                            <width>100%</width>
                            <control type="label">
                                <aligny>top</aligny>
                                <width>80</width>
                                <label>31282</label>
                                <textcolor>main_fg_70</textcolor>
                                <font>font_musicvis_album</font>
                                <animation effect="fade" start="100" end="50" condition="true">Conditional</animation>
                            </control>
                            <control type="label">
                                <aligny>top</aligny>
                                <width>auto</width>
                                <textcolor>main_fg_70</textcolor>
                                <font>font_musicvis_album</font>
                                <label>$INFO[MusicPlayer.Album]</label>
                            </control>
                        </control>
                    </control>
                </control>
            </control>

            <include>Furniture_InfoClock</include>
        </control>
    </include>

    <include name="OSD_Video">
        <control type="group">
            <visible>Player.Seeking | Player.DisplayAfterSeek | Player.Paused | Player.Forwarding | Player.Rewinding | Player.ShowInfo | Window.IsActive(musicosd) | Window.IsActive(videoosd) | Window.IsVisible(script-cu-lrclyrics-main.xml) | Window.IsVisible(DialogFullScreenInfo.xml)</visible>
            <include>Animation_FadeIn</include>
            <include>Animation_FadeOut</include>

            <control type="group">
                <visible>Player.ShowInfo | Window.IsVisible(DialogFullScreenInfo.xml)</visible>
                <include>Animation_FadeIn</include>
                <include>Animation_FadeOut</include>
                <!-- Overlay -->
                <control type="image">
                    <texture colordiffuse="bf000000">common/white.png</texture>
                </control>

                <control type="group">
                    <control type="group">
                        <width>480</width>
                        <height>720</height>
                        <left>SidePad</left>
                        <bottom>SidePad</bottom>
                        <control type="image">
                            <centerbottom>0</centerbottom>
                            <width>100%</width>
                            <height>48</height>
                            <aspectratio>stretch</aspectratio>
                            <texture border="24,12,24,12">diffuse/shadowspot.png</texture>
                        </control>
                        <control type="image">
                            <include>Defs_Shadow</include>
                            <aspectratio aligny="bottom">keep</aspectratio>
                            <texture>$INFO[Player.Art(thumb)]</texture>
                        </control>
                        <control type="image">
                            <include>Defs_Shadow</include>
                            <texture>$INFO[Player.Art(tvshow.poster)]</texture>
                            <visible>!String.IsEmpty(Player.Art(tvshow.poster))</visible>
                        </control>
                    </control>
                    <control type="group" description="info">
                        <left>560</left>
                        <right>SidePad</right>
                        <top>310</top>
                        <bottom>SidePad</bottom>
                        <control type="grouplist">
                            <top>200</top>
                            <left>40</left>
                            <bottom>0</bottom>
                            <right>0</right>
                            <align>bottom</align>
                            <control type="label">
                                <aligny>top</aligny>
                                <height>95</height>
                                <width>100%</width>
                                <font>font_musicvis_title</font>
                                <label>$INFO[Player.Title]</label>
                                <visible>!VideoPlayer.Content(episodes)</visible>
                            </control>
                            <control type="label">
                                <aligny>top</aligny>
                                <height>95</height>
                                <width>100%</width>
                                <font>font_musicvis_title</font>
                                <label>$INFO[VideoPlayer.TvShowTitle]</label>
                                <visible>VideoPlayer.Content(episodes)</visible>
                            </control>
                            <control type="grouplist">
                                <itemgap>0</itemgap>
                                <orientation>horizontal</orientation>
                                <height>70</height>
                                <width>100%</width>
                                <visible>!VideoPlayer.Content(episodes)</visible>
                                <visible>!String.IsEmpty(VideoPlayer.Director)</visible>
                                <control type="label">
                                    <aligny>top</aligny>
                                    <width>80</width>
                                    <label>31281</label>
                                    <font>font_musicvis_album</font>
                                    <animation effect="fade" start="100" end="50" condition="true">Conditional</animation>
                                </control>
                                <control type="label">
                                    <aligny>top</aligny>
                                    <width>auto</width>
                                    <font>font_musicvis_album</font>
                                    <label>$INFO[VideoPlayer.Director]</label>
                                </control>
                            </control>
                            <control type="grouplist">
                                <itemgap>0</itemgap>
                                <orientation>horizontal</orientation>
                                <height>70</height>
                                <width>100%</width>
                                <visible>VideoPlayer.Content(episodes)</visible>
                                <control type="label">
                                    <aligny>top</aligny>
                                    <width>auto</width>
                                    <label>$INFO[VideoPlayer.Season,,x]$INFO[VideoPlayer.Episode,,. ]</label>
                                    <font>font_musicvis_album</font>
                                    <animation effect="fade" start="100" end="50" condition="true">Conditional</animation>
                                </control>
                                <control type="label">
                                    <aligny>top</aligny>
                                    <width>auto</width>
                                    <font>font_musicvis_album</font>
                                    <label>$INFO[VideoPlayer.Title]</label>
                                </control>
                                <control type="label">
                                    <aligny>center</aligny>
                                    <height>80</height>
                                    <width>auto</width>
                                    <font>font_videoplayer_premiered</font>
                                    <label>$INFO[VideoPlayer.Premiered,  (,)]</label>
                                </control>
                            </control>
                            <control type="textbox">
                                <aligny>top</aligny>
                                <height max="128">auto</height>
                                <width>100%</width>
                                <font>font_plotbox</font>
                                <label>$INFO[VideoPlayer.Plot]</label>
                            </control>
                        </control>
                    </control>
                </control>
            </control>

            <include>Furniture_InfoClock</include>
        </control>
    </include>

    <include name="OSD_Controls">

        <control type="togglebutton" id="11">
            <centertop>50%</centertop>
            <description>Skip Back</description>
            <width>48</width>
            <height>48</height>
            <label></label>
            <font>noop</font>
            <texturefocus colordiffuse="$VAR[ColorHighlight]">osd/record.png</texturefocus>
            <texturenofocus colordiffuse="main_fg_70">osd/record.png</texturenofocus>
            <usealttexture>Player.Recording</usealttexture>
            <alttexturefocus colordiffuse="$VAR[ColorHighlight]">osd/record-on.png</alttexturefocus>
            <alttexturenofocus colordiffuse="main_fg_70">osd/record-on.png</alttexturenofocus>
            <onclick>PlayerControl(Record)</onclick>
            <enable>Player.CanRecord</enable>
            <visible>VideoPlayer.Content(LiveTV)</visible>
            <animation effect="fade" start="100" end="33" time="100" condition="!Player.CanRecord">Conditional</animation>
        </control>

        <control type="button" id="12">
            <centertop>50%</centertop>
            <description>Skip Back</description>
            <width>48</width>
            <height>48</height>
            <label></label>
            <font>noop</font>
            <texturefocus colordiffuse="$VAR[ColorHighlight]" flipx="true">osd/next.png</texturefocus>
            <texturenofocus colordiffuse="main_fg_70" flipx="true">osd/next.png</texturenofocus>
            <onclick>PlayerControl(Previous)</onclick>
        </control>

        <control type="button" id="13">
            <centertop>50%</centertop>
            <description>Rewind</description>
            <width>48</width>
            <height>48</height>
            <label></label>
            <font>noop</font>
            <texturefocus colordiffuse="$VAR[ColorHighlight]" flipx="true">osd/ff.png</texturefocus>
            <texturenofocus colordiffuse="main_fg_70" flipx="true">osd/ff.png</texturenofocus>
            <onclick>PlayerControl(Rewind)</onclick>
        </control>

        <control type="togglebutton" id="14">
            <centertop>50%</centertop>
            <description>Play/Pause</description>
            <width>48</width>
            <height>48</height>
            <label></label>
            <altlabel></altlabel>
            <font>noop</font>
            <texturefocus colordiffuse="$VAR[ColorHighlight]">osd/pause.png</texturefocus>
            <texturenofocus colordiffuse="main_fg_70">osd/pause.png</texturenofocus>
            <usealttexture>Player.Paused | Player.Forwarding | Player.Rewinding</usealttexture>
            <alttexturefocus colordiffuse="$VAR[ColorHighlight]">osd/play.png</alttexturefocus>
            <alttexturenofocus colordiffuse="main_fg_70">osd/play.png</alttexturenofocus>
            <onclick>PlayerControl(Play)</onclick>
            <visible>Player.PauseEnabled</visible>
            <animation effect="fade" start="100" end="33" time="100" condition="!Player.PauseEnabled">Conditional</animation>
        </control>

        <control type="button" id="15">
            <centertop>50%</centertop>
            <description>Stop</description>
            <width>48</width>
            <height>48</height>
            <label></label>
            <font>noop</font>
            <texturefocus colordiffuse="$VAR[ColorHighlight]">osd/stop.png</texturefocus>
            <texturenofocus colordiffuse="main_fg_70">osd/stop.png</texturenofocus>
            <onclick>PlayerControl(Stop)</onclick>
        </control>

        <control type="button" id="16">
            <centertop>50%</centertop>
            <description>Fast Forward</description>
            <width>48</width>
            <height>48</height>
            <label></label>
            <font>noop</font>
            <texturefocus colordiffuse="$VAR[ColorHighlight]">osd/ff.png</texturefocus>
            <texturenofocus colordiffuse="main_fg_70">osd/ff.png</texturenofocus>
            <onclick>PlayerControl(Forward)</onclick>
        </control>

        <control type="button" id="17">
            <centertop>50%</centertop>
            <description>Next</description>
            <width>48</width>
            <height>48</height>
            <label></label>
            <font>noop</font>
            <texturefocus colordiffuse="$VAR[ColorHighlight]">osd/next.png</texturefocus>
            <texturenofocus colordiffuse="main_fg_70">osd/next.png</texturenofocus>
            <onclick>PlayerControl(Next)</onclick>
        </control>
    </include>

    <include name="OSD_Controls_Video_Right">
        <control type="button" id="4">
            <description>Extra Info</description>
            <label>19033</label>
            <onclick condition="[VideoPlayer.Content(movies) | VideoPlayer.Content(episodes)] + !Player.Paused">Pause</onclick>
            <onclick condition="VideoPlayer.Content(movies)">RunScript(script.extendedinfo,info=extendedinfo,name=$INFO[VideoPlayer.Title],imdb_id=$INFO[VideoPlayer.IMDBNumber])</onclick>
            <onclick condition="VideoPlayer.Content(episodes)">RunScript(script.extendedinfo,info=extendedtvinfo,name=$INFO[VideoPlayer.TvShowTitle],imdb_id=$INFO[VideoPlayer.IMDBNumber])</onclick>
            <include>OSD_TextButton</include>
        </control>
        <control type="button" id="5">
            <description>3d Mode</description>
            <label>14232</label>
            <onclick>StereoMode</onclick>
            <enable>VideoPlayer.IsStereoscopic</enable>
            <include>OSD_TextButton</include>
        </control>
        <control type="button" id="6">
            <description>Bookmarks</description>
            <label>298</label>
            <onclick>ActivateWindow(125)</onclick>
            <include>OSD_TextButton</include>
        </control>
    </include>

    <include name="OSD_Controls_LiveTV_Right">
        <control type="button" id="4">
            <description>CHANNELS</description>
            <label>19019</label>
            <include>OSD_TextButton</include>
            <onclick>ActivateWindow(pvrosdchannels)</onclick>
        </control>
        <control type="button" id="5">
            <description>EPG</description>
            <label>$LOCALIZE[19030] / $LOCALIZE[19031]</label>
            <onclick>ActivateWindow(pvrosdguide)</onclick>
            <include>OSD_TextButton</include>
        </control>

        <control type="button" id="6">
            <description>TIMELINE</description>
            <include>OSD_TextButton</include>
            <label>19032</label>
            <onclick>Close</onclick>
            <onclick>ActivateWindow(tvguide,,return)</onclick>
        </control>
    </include>

    <include name="OSD_Controls_Video_Left">
        <control type="button" id="1">
            <description>Audio Settings</description>
            <label>292</label>
            <onclick>ActivateWindow(osdaudiosettings)</onclick>
            <include>OSD_TextButton</include>
        </control>
        <control type="button" id="2">
            <label>291</label>
            <onclick>ActivateWindow(osdvideosettings)</onclick>
            <include>OSD_TextButton</include>
        </control>
        <control type="button" id="3">
            <description>Subs</description>
            <label>$LOCALIZE[287]</label>
            <onclick>Action(ShowSubtitles)</onclick>
            <include>OSD_TextButton</include>
        </control>
    </include>

    <include name="OSD_Controls_Music_Left">
        <control type="button" id="1">
            <description>Repeat</description>
            <label>$LOCALIZE[486]: $INFO[Playlist.Repeat]</label>
            <onclick>XBMC.PlayerControl(Repeat)</onclick>
            <include>OSD_TextButton</include>
        </control>
        <control type="button" id="2">
            <label>$LOCALIZE[590]: $INFO[Playlist.Random]</label>
            <onclick>XBMC.PlayerControl(Random)</onclick>
            <include>OSD_TextButton</include>
        </control>
        <control type="button" id="3">
            <description>Playlist</description>
            <label>$LOCALIZE[559]</label>
            <onclick>Close</onclick>
            <onclick>ActivateWindow(musicplaylist)</onclick>
            <include>OSD_TextButton</include>
        </control>
    </include>

    <include name="OSD_Controls_Music_Right">
        <control type="button" id="4">
            <description>Lyrics</description>
             <label>24013</label>
            <onclick>Close</onclick>
            <onclick>RunScript(script.cu.lrclyrics)</onclick>
            <enable>System.HasAddon(script.cu.lrclyrics)</enable>
            <include>OSD_TextButton</include>
        </control>
        <control type="button" id="500">
            <description>Vis</description>
            <label>250</label>
            <include>OSD_TextButton</include>
        </control>
        <control type="button" id="6">
            <description>Presets</description>
            <label>13388</label>
            <onclick>XBMC.ActivateWindow(visualisationpresetlist)</onclick>
            <include>OSD_TextButton</include>
        </control>
    </include>

    <include name="OSD_TextButton">
        <width>230</width>
        <height>100%</height>
        <textoffsetx>10</textoffsetx>
        <textcolor>main_fg_70</textcolor>
        <disabledcolor>main_fg_12</disabledcolor>
        <texturefocus colordiffuse="$VAR[ColorHighlight]">common/gradient-diffuse.png</texturefocus>
        <font>font_osd_textbutton</font>
    </include>
</includes>
